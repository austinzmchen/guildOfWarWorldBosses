platform :ios, '8.0'

use_frameworks!

source 'https://github.com/CocoaPods/Specs.git'

def addCommonDependancies
    # UI
    pod 'KYDrawerController'
    
    # Misc
    pod 'Locksmith'
    
    pod 'Fabric'
    pod 'Crashlytics'
end


target 'My GW2' do
    addCommonDependancies
end

target 'GoWWorldBossesTests' do
    addCommonDependancies
end

addCommonDependancies